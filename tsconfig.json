{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",  
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true,        
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src",  
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },   
    "rootDirs": ["src", "tests"],  
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,  
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true,
    "strict": true,   
    "noImplicitOverride": true,    
    "skipLibCheck": true 
  }
}
